{
  "name": "web",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf _site && NODE_ENV=production run-s build:css build:js build:html size",
    "dev": "run-p dev:*",
    "dev:html": "eleventy --serve",
    "dev:css": "yarn css --watch --verbose",
    "dev:js": "yarn js --watch",
    "build:html": "eleventy",
    "build:css": "yarn css",
    "build:js": "yarn js",
    "css": "postcss ./src/main.css -o ./src/site/css/built.css",
    "js": "rollup --config",
    "size": "bundlesize",
    "clear-cache": "find src/site/_data -type f -name '*.cache.json' -delete",
    "serve-prod": "cd _site && python -m SimpleHTTPServer 8080 && cd -",
    "prod": "run-s build serve-prod"
  },
  "bundlesize": [
    {
      "path": "./_site/**/*.css",
      "maxSize": "10 kB"
    },
    {
      "path": "./_site/**/*.html",
      "maxSize": "20 kB"
    },
    {
      "path": "./_site/**/*.js",
      "maxSize": "5 kB"
    }
  ],
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@sanity/block-content-to-html": "^1.3.8",
    "@sanity/block-content-to-markdown": "^0.0.5",
    "@sanity/client": "^1.150.7",
    "@sanity/image-url": "^0.140.19",
    "autoprefixer": "^10.4.0",
    "bundlesize": "^0.18.1",
    "chalk": "^4.1.2",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "groq": "^1.150.1",
    "luxon": "^2.1.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.11",
    "postcss-cli": "^8.0.0",
    "rollup": "^2.60.0",
    "rollup-plugin-terser": "^7.0.2",
    "tailwindcss": "^1.8.10"
  },
  "dependencies": {
    "redom": "^3.27.1"
  }
}
