<!-- prettier-ignore -->
{% import "./icons.njk" as Icons %}

<!-- prettier-ignore -->
{% set iconCls = ["flex", "px-2", "w-8", "mx-6", "md:mx-0"] | join(" ") %}

<!-- prettier-ignore -->
{% set formAction =
"//middlewestmgmt.us3.list-manage.com/subscribe/post?u=41155eea0059f0d47081cf8c3&amp;id=12eb6035f7"
%}

<footer class="readable py-8 px-4">
  <div
    class="container mx-auto flex flex-col md:flex-row justify-between items-center"
  >
    <div
      class="flex flex-row md:flex-col order-2 md:order-1 w-full md:w-auto justify-between items-center md:items-start overflow-hidden"
    >
      <a href="/" class="w-24 md:w-32 opacity-75"
        ><img src="/img/logo-dark.png" alt="S. Carey home"
      /></a>
      <div class="flex flex-1 justify-end -mr-6 text-gray-600">
        {{ Icons.Fb(iconCls) }} {{ Icons.Twitter(iconCls) }} {{
        Icons.Ig(iconCls) }}
      </div>
    </div>

    <form
      class="w-full md:w-64 order-1 md:order-2 mb-8 md:mb-0"
      action="{{formAction}}"
      method="post"
      name="mc-embedded-subscribe-form"
      id="mc-embedded-subscribe-form"
      target="_blank"
      novalidate
    >
      <div style="position: absolute; left: -5000px;" aria-hidden="true">
        <input
          type="text"
          name="b_41155eea0059f0d47081cf8c3_12eb6035f7"
          tabindex="-1"
          value=""
        />
      </div>
      <label
        for="mce-EMAIL"
        class="pl-2 text-xs uppercase tracking-widest font-semibold text-gray-700"
        >Email Address</label
      >
      <div class="flex w-full">
        <input
          class="flex-1 text-sm pl-2 pr-4 mr-4 py-1 mb-1 leading-6 bg-transparent border-b border-gray-600"
          id="email"
          id="mce-EMAIL"
          name="EMAIL"
          placeholder="email@example.com"
        />
        <button
          class="hover:text-red-700 transition duration-100 transition-colors text-xs inline-flex items-center justify-center py-1 border border-transparent leading-6 rounded-sm tracking-wide font-medium"
          name="subscribe"
          id="mc-embedded-subscribe"
        >
          <span class="mr-1">
            Subscribe
          </span>
          <span class="w-4 flex hover:text-red-700">
            {{ Icons.ArrowRight() }}
          </span>
        </button>
      </div>
    </form>
  </div>
</footer>
